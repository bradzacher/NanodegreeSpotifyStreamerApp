<resources>
    <color name="primary_light">#3B7F5E</color>
    <color name="primary">#56BA89</color>
    <color name="primary_dark">#3B7F5E</color>
    <color name="accent_light">#EEF8FC</color>
    <color name="accent">#CFD8DC</color>
    <color name="accent_dark">#787D7F</color>
    <color name="alert_bad">#D50000</color>
    <color name="alert_good">#64DD17</color>
    <color name="black">#000000</color>
    <color name="white">#FFFFFF</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="SectionHeading">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HorizontalItemGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="HorizontalGridItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">30</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    <style name="HorizontalGridItemLeft" parent="HorizontalGridItem">
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <style name="HorizontalGridItemMiddle" parent="HorizontalGridItem">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>
    <style name="HorizontalGridItemRight" parent="HorizontalGridItem">
        <item name="android:layout_marginLeft">8dp</item>
    </style>

</resources>
