<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="left"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="8dp">

    <!-- TODO: styling -->
    <ImageView
        android:layout_width="@dimen/search_fragment_image_size"
        android:layout_height="@dimen/search_fragment_image_size"
        android:id="@+id/search_fragment_image"
        android:contentDescription="@string/search_item_image_description"
        android:src="@drawable/ic_error_outline_black_48dp" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/search_fragment_name"
        android:text="@string/search_item_placeholder"
        android:textColor="#000000"
        android:paddingLeft="16dp" />

</LinearLayout>
